<!-- 
This is a minimal sample server.xml suitable for launching and testing the DevRadar webapp.
It is adapted from the default Tomcat server.xml file.
 -->
 
<Server port="8005" shutdown="SHUTDOWN">

    <Listener SSLEngine="on" className="org.apache.catalina.core.AprLifecycleListener"/>
    <Listener className="org.apache.catalina.core.JasperListener"/>
    <Listener className="org.apache.catalina.mbeans.ServerLifecycleListener"/>
    <Listener className="org.apache.catalina.mbeans.GlobalResourcesLifecycleListener"/>

    <GlobalNamingResources>

        <!-- 
        DevRadar JNDI DataSource. 
        The following configuration uses Apache Derby and needs the System property "derby.system.home" to be set. 
        Feel free to adapt this to your preferred RDBMS. 
        -->
        <Resource
            auth="Container"
            type="javax.sql.DataSource"
            name="jdbc/devradar-ds"
            driverClassName="org.apache.derby.jdbc.EmbeddedDriver"
            url="jdbc:derby:devradar;create=true"
            username="devradar"
            password=""
            maxActive="8"
            maxIdle="4" />

    </GlobalNamingResources>

    <Service name="Catalina">

        <Connector
            connectionTimeout="20000"
            maxSpareThreads="2"
            maxThreads="5"
            minSpareThreads="1"
            port="8080"
            protocol="HTTP/1.1"
            redirectPort="8443" />
            
        <Engine defaultHost="localhost" name="Catalina">

            <Host
                appBase="webapps"
                autoDeploy="true"
                name="localhost"
                unpackWARs="true"
                xmlNamespaceAware="false"
                xmlValidation="false">

                <!-- 
                DevRadar webapp context. 
                The following configuration is suitable for testing with Eclipse WTP. 
                Feel free to adapt this to your preferred IDE and/or Tomcat environment. 
                Alternatively, you can specify this in a separate context.xml file.
                -->
                <Context
                    docBase="dev-radar"
                    path="/dev-radar"
                    reloadable="true"
                    source="org.eclipse.jst.jee.server:dev-radar">
                    <!-- 
                    A link to the DevRadar DataSource defined above. 
                    -->
                    <ResourceLink
                        name="jdbc/devradar-ds"
                        global="jdbc/devradar-ds"
                        type="javax.sql.DataSource" />
                </Context>


            </Host>
        </Engine>
    </Service>
</Server>